<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@color/accent_always_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:id="@+id/cv_csl_song_list"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_width="128dp"
            android:layout_height="74dp">
        <ImageView
                android:id="@+id/iv_csl_song_list"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/tv_csl_song_list_title"
            android:layout_alignTop="@id/cv_csl_song_list"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/cv_csl_song_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="15sp"
            android:textColor="@color/text_common_black"
            android:ellipsize="end"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

</RelativeLayout>