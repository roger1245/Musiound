<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="51dp">

        <ImageView
                android:src="@drawable/fragment_my_local"
                android:layout_marginStart="26dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="本地音乐"
                android:textSize="15sp"
                android:textColor="@color/text_common_black"
                android:layout_marginStart="26dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_recent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="51dp">

        <ImageView
                android:src="@drawable/fragment_my_recent"
                android:layout_marginStart="26dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="最近播放"
                android:textSize="15sp"
                android:textColor="@color/text_common_black"
                android:layout_marginStart="26dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="51dp">

        <ImageView
                android:src="@drawable/fragment_my_download"
                android:layout_marginStart="26dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="下载管理"
                android:textSize="15sp"
                android:textColor="@color/text_common_black"
                android:layout_marginStart="26dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_collect"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="51dp">

        <ImageView
                android:src="@drawable/fragment_my_collect"
                android:layout_marginStart="26dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="我的收藏"
                android:textSize="15sp"
                android:textColor="@color/text_common_black"
                android:layout_marginStart="26dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
            android:background="@color/dialog_bottom_song_list_view_divide"
            android:layout_width="match_parent"
            android:layout_height="6dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="51dp">

        <ImageView
                android:layout_marginStart="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/fragment_my_song_list_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="创建的歌单"
                android:layout_marginStart="11dp"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@color/text_common_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:src="@drawable/fragment_my_song_list_info"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="250dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="51dp">

        <ImageView
                android:layout_marginStart="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/fragment_my_song_list_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="收藏的歌单"
                android:layout_marginStart="11dp"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@color/text_common_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:src="@drawable/fragment_my_song_list_info"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="250dp"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>