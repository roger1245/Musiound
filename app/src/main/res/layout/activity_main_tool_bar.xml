<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:src="@drawable/activity_main_night_mode"
            android:layout_alignBottom="@id/tl_activity_main"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_night_switch" />


    <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_activity_main"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:tabTextColor="@color/activity_main_tool_bar_text"
            app:tabTextAppearance="@style/MainTabTextAppearance"
            app:tabBackground="@android:color/transparent"
            app:tabRippleColor="@android:color/transparent"
            app:tabSelectedTextColor="@color/text_common_black"
            app:tabIndicatorHeight="0dp">
    </com.google.android.material.tabs.TabLayout>

    <ImageView
            android:id="@+id/iv_search"
            android:layout_alignBottom="@id/tl_activity_main"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="23dp"
            android:src="@drawable/activity_main_search"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</RelativeLayout>