<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.activity.MainActivity">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_common"
            android:layout_width="match_parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:layout_height="?attr/actionBarSize">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tl_activity_main"
                    android:layout_width="300dp"
                    android:layout_height="49dp"
                    app:tabBackground="@android:color/transparent"
                    app:tabRippleColor="@android:color/transparent"
                    app:tabSelectedTextColor="@color/text_common_black"
                    app:tabIndicatorHeight="0dp">
            </com.google.android.material.tabs.TabLayout>
            <ImageView
                    android:id="@+id/iv_search"
                    android:layout_toEndOf="@id/tl_activity_main"
                    android:src="@drawable/activity_main_search"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>


    <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_activity_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <!--<Button-->
            <!--android:id="@+id/btn_play_detail_activity"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"/>-->
    <!--<Button-->
            <!--android:id="@+id/btn_song_list_activity"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"/>-->

</LinearLayout>