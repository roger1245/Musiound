<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

    <TextView
            android:id="@+id/tv_list_detail_number"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_list_detail_title"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_alignStart="@id/tv_list_detail_title"
            android:layout_below="@id/tv_list_detail_title"
            android:id="@+id/tv_list_detail_description"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toStartOf="@id/iv_list_detail_play"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:src="@drawable/activity_list_detail_play"
            android:id="@+id/iv_list_detail_play"
            android:layout_toStartOf="@id/iv_list_detail_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/iv_list_detail_info"
            android:layout_alignParentEnd="true"
            android:src="@drawable/activity_list_detail_info"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>